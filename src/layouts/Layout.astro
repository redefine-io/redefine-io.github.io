---
import SEO from "~/components/SEO.astro"

export interface Props {
	title: string;
}

const title = [Astro.props.title, "Redefine"].filter(Boolean).join(" | ")
const resolvedImage = {
	src: new URL("og/redefine.png", Astro.site).toString(),
	alt: "Everything you know about data, reimaged",
}
const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />

		<!-- favicons -->
		<link rel="icon" sizes="any" href="/favicon.ico">
    <link rel="icon" type="image/svg+xml" href="/icon.svg">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
		<link rel="manifest" href="/manifest.webmanifest">

		<link rel="sitemap" href="/sitemap-index.xml">

		<SEO
			name="Redefine"
			title={title}
			description="We help companies with all their data needs. Whether you are starting a digital transformation or processing billions of events per day."
			image={resolvedImage}
			/>
	</head>
	<body>
		{/* SkipLink */}
		<div class="flex min-h-screen flex-col">
			<div class="sticky top-0 z-50">
				<header>
					<!-- TODO: mobile-nav -->
					<nav aria-label="Primary" class="flex items-center w-full mx-auto max-w-screen-2xl p-8 h-20">
						<a href="/" rel="prefetch" title="Home">
							<img class="w-[240px]" src="logo-dark.png" alt="Redefine Technologies logo">
						</a>
						<div class="ml-16 hidden gap-16 lg:flex">
							<a href="" class="transition-colors text-gray-900 hover:text-redefine-primary">Services</a>
							<a href="" class="transition-colors text-gray-900 hover:text-redefine-primary">Company</a>
							<a href="" class="transition-colors text-gray-900 hover:text-redefine-primary">Blog</a>
							<a href="" class="transition-colors text-gray-900 hover:text-redefine-primary">Contact</a>
						</div>
					</nav>
				</header>

				<footer>
					<div class="flex justify-center bg-gray-900 py-10 text-white">
						<div class="grid grid-cols-1 space-y-5 md:grid-cols-3">
							<div class="p-4">
								<div class="relative h-20 w-44 cursor-pointer">
									<img src="logo-light.png" alt="Redefine Technologies logo">
								</div>
								<p class="mt-4 max-w-xs text-xs text-gray-400">
									Redefine is registered in England and Wales as Redefine
									Technologies Limited (No. 13161425)
								</p>
							</div>
						</div>
					</div>
					<div class="py-5">
						<div class="mx-auto flex max-w-7xl justify-center text-xs text-gray-600">
							&#169; {currentYear} Redefine Technologies. All Rights Reserved
						</div>
					</div>
				</footer>
			</div>
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
