---
export interface Props {
  href: string;
  name: string;
}

const currentPath = Astro.url.pathname.replace(/\/+$/, "");
const { href, name } = Astro.props;
const selected = href == currentPath;
---

<a
  href={href}
  rel="prefetch"
  class={`font-mont text-4xl md:text-xl transition-colors font-medium text-gray-900
        hover:text-redefine-primary border-redefine-primary
        ${selected ? "border-b-2" : ""}`}
>
  {name}
</a>
