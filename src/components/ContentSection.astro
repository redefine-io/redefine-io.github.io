---
export interface Props {
  class?: string;
  dark?: boolean;
}
const { class: className, dark } = Astro.props;
---

<section class={className}>
  <div class="py-24 px-6 sm:px-6 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <h2 class={`text-4xl font-bold tracking-tight sm:text-6xl text-center ${dark ? "text-white" : ""}`}>
        <slot name="title" />
      </h2>
      <p class={`mt-6 text-lg leading-8 ${dark ? "text-gray-100" : ""}`}>
        <slot name="desc" />
      </p>
    </div>
  </div>
</section>
